{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "http://localhost:5000/api",
    "VITE_PROD_API_URL": "https://your-backend-url.com/api"
  },
  "build": {
    "env": {
      "VITE_API_URL": "http://localhost:5000/api",
      "VITE_PROD_API_URL": "https://your-backend-url.com/api"
    }
  }
} 